{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "reST",
  "patterns": [
    {
      "begin": "^[ ]*(?=[^ ].+$)",
      "end": "^[ ]*$",
      "patterns": [
        { "include": "#headingMarker" },
        { "include": "#directive" },
        { "include": "#href" },
        { "include": "#fieldList" }
      ]
    }
  ],
  "repository": {
    "directive": {
      "patterns": [
        {
          "name": "markup.raw",
          "begin": "^\\.\\. (?=[-\\w]+:: +.*$)",
          "end": "^$",
          "patterns": [
            { "include": "#dirMarkerLine" },
            { "include": "#fieldList" }
          ]
        }
      ]
    },
    "dirMarkerLine": {
      "patterns": [
        {
          "match": "([-\\w]+):: (.*)",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "string.unquoted"
            }
          }
        }
      ]
    },
    "fieldList": {
      "patterns": [
        {
          "match": "^ +:(\\w+): [\\s\\S]+$",
          "captures": {
            "1": {
              "name": "variable.name"
            }
          }
        }
      ]
    },
    "headingMarker": {
      "patterns": [
        {
          "match": "^((=|-|#){4,})$",
          "captures": {
            "1": {
              "name": "markup.heading"
            }
          }
        }
      ]
    },
    "href": {
      "patterns": [
        {
          "name": "markup.underline.link",
          "begin": "(?<![`\\\\])`[^_`][^`<]+(?=<)",
          "end": "`_"
        }
      ]
    }
  },
  "scopeName": "text.reST"
}
