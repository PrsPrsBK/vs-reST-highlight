{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "reST",
  "patterns": [
    {
      "include": "#heading"
    },
    {
      "include": "#block"
    },
    {
      "include": "#dirImage"
    },
    {
      "include": "#directive"
    },
    {
      "include": "#href"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "name": "markup.italic",
          "begin": "^[ ]+(?=[^ ].+$)",
          "end": "^[ ]*$",
          "contentName": "markup.bold"
        }
      ]
    },
    "dirImage": {
      "patterns": [
        {
          "name": "markup.italic",
          "begin": "^\\.\\. image:: .+",
          "end": "^$",
          "patterns": [
            {
              "include": "#flAlt"
            },
            {
              "include": "#flHeight"
            },
            {
              "include": "#flWidth"
            },
            {
              "include": "#flScale"
            },
            {
              "include": "#flAlign"
            },
            {
              "include": "#flTarget"
            },
            {
              "include": "#fieldList"
            }
          ]
        }
      ]
    },
    "directive": {
      "patterns": [
        {
          "name": "markup.raw",
          "begin": "^\\.\\. (?=[-\\w]+:: +.*$)",
          "end": "^$",
          "patterns": [
            {
              "include": "#dirMarkerLine"
            },
            {
              "include": "#fieldList"
            }
          ]
        }
      ]
    },
    "dirMarkerLine": {
      "patterns": [
        {
          "match": "([-\\w]+):: (.*)",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "string.unquoted"
            }
          }
        }
      ]
    },
    "flAlign": {
      "patterns": [
        {
          "match": "^ +:(align): (.+)$",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "string.unquoted"
            }
          }
        }
      ]
    },
    "flAlt": {
      "patterns": [
        {
          "match": "^ +:(alt): (.+)$",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "string.unquoted"
            }
          }
        }
      ]
    },
    "flHeight": {
      "patterns": [
        {
          "match": "^ +:(height): (.+)$",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "constant.other"
            }
          }
        }
      ]
    },
    "flScale": {
      "patterns": [
        {
          "match": "^ +:(scale): (.+)$",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "constant.other"
            }
          }
        }
      ]
    },
    "flTarget": {
      "patterns": [
        {
          "match": "^ +:(target): (.+)$",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "constant.other"
            }
          }
        }
      ]
    },
    "flWidth": {
      "patterns": [
        {
          "match": "^ +:(width): (.+)$",
          "captures": {
            "1": {
              "name": "variable.name"
            },
            "2": {
              "name": "constant.other"
            }
          }
        }
      ]
    },
    "fieldList": {
      "patterns": [
        {
          "match": "^ +:(\\w+): [\\s\\S]+$",
          "captures": {
            "1": {
              "name": "invalid.deprecated"
            }
          }
        }
      ]
    },
    "heading": {
      "patterns": [
        {
          "match": "^((=|-|#){4,})$",
          "captures": {
            "1": {
              "name": "markup.heading"
            }
          }
        }
      ]
    },
    "href": {
      "patterns": [
        {
          "name": "markup.underline.link",
          "begin": "(?<!`)`[^_`][^`<]+(?=<)",
          "end": "`_"
        }
      ]
    }
  },
  "scopeName": "text.reST"
}
