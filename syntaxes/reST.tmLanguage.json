{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "reST",
  "patterns": [
    {
      "name" : "invalid.deprecated",
      "begin": "^[ ]+(?=[^ ].+$)",
      "end": "^$",
      "patterns": [
        { "include": "#href" },
        { "include": "#dummyText" }
      ]
    }
  ],
  "repository": {
    "dummyText": {
      "patterns": [
        {
          "name": "markup.bold",
          "match": "THIS_IS_DUMMY_AS_MARKER"
        }
      ]
    },
    "href": {
      "patterns": [
        {
          "name": "markup.underline.link",
          "begin": "(?<![`\\\\])`[^_`]",
          "end": "<[^>]+>`_"
        }
      ]
    }
  },
  "scopeName": "text.reST"
}
